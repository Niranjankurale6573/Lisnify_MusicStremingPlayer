<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_upload"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music file"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/amaranth"
            android:textColor="@color/red"
            android:text="Fill all fields"/>

        <EditText
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:ems="10"
            android:hint="Enter Song Title"
            android:textColorHint="@color/lightblack"
            android:background="@color/lightray_yellow"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <EditText
            android:id="@+id/name_artist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:ems="10"
            android:textColorHint="@color/lightblack"
            android:background="@color/lightray_yellow"
            android:gravity="center"
            android:hint="Enter Artist Name"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <EditText
            android:id="@+id/song_Language"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:ems="10"
            android:textColorHint="@color/lightblack"
            android:background="@color/lightray_yellow"
            android:gravity="center"
            android:hint="Enter Song Language"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <Spinner
            android:id="@+id/songType"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:background="@color/lightray_yellow"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/_20sdp">
        </Spinner>


        <Button
            android:id="@+id/select_file"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_skyblue"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Select File "/>
    </LinearLayout>
</androidx.cardview.widget.CardView>